version: '3'
volumes:
  mysql-volume:
services:
  mysql:
    image: {{ mysql_image }}
    container_name: db
    ports:
      - "3306:3306"
    environment:
      MYSQL_ROOT_PASSWORD: {{ mysql_root_pw }}
      MYSQL_USER: {{ mysql_user }}
      MYSQL_PASSWORD: {{ mysql_pw }}
      MYSQL_DATABASE: {{ mysql_db }}
    volumes:
      - mysql-volume:/var/lib/mysql

  nginx:
    image: {{ nginx_image }}
    container_name: nginx
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
      - ./php-site:/var/www/html

  apache:
    build:
      context: apache
      dockerfile: Docker_apache
    container_name: apache
    volumes:
      - ./apache/wp/public_html:/var/www/wordpress.tsiplenkov.ru/public_html
    ports:
      - "8090:8081"

  php:
    image: {{ php_image }}
    container_name: php_container
    volumes:
      - ./php-site:/var/www/html
    depends_on:
      - mysql
